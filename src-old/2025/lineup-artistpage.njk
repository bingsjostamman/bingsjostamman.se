---
pagination:
  data: lineup2025
  size: 1
  alias: artist
  addAllPagesToCollections: true
layout: "layouts/artist"
eleventyComputed:
  permalink: "/scen/{{ artist.name | slugify }}/"
  # Compute the date from the artist's 'day'
  date: |
    {% if artist.day == "tisdag" %}
      2025-07-01
    {% elif artist.day == "onsdag" %}
      2025-07-02
    {% elif artist.day == "torsdag" %}
      2025-07-03
    {% else %}
      2025-07-01
    {% endif %}
---

<h1>{{ artist.name }}</h1>
<p><strong>Stage:</strong> {{ artist.stage }}</p>
<p><strong>Day:</strong> {{ artist.day }}</p>
<p><strong>Time:</strong> {{ artist.starttime }} â€“ {{ artist.endtime }}</p>

<p>{{ artist.description }}</p>

<hr>


{% from "components/page-card.njk" import pageCard %}
{{ pageCard(artist.name, "/scen/" + artist.name | slugify + "/", artist.image, artist.description) }}


