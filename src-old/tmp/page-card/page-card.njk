{% macro pageCard(title, url, image="", description="") %}
<article class="page-card">
  <a href="{{ url }}">
    {% if image %}
      <img src="{{ image }}" alt="{{ title }}" loading="lazy">
    {% endif %}
    <h2>{{ title }}</h2>
    {% if description %}
      <p>{{ description }}</p>
    {% endif %}
  </a>
</article>
{% endmacro %}